{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "jsx": "react",
    "lib": ["es6", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./**/*.tsx", "./**/*.ts"
  ],
  "exclude": ["./node_modules"]
}
