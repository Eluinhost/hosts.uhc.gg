{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./build",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true,
    "jsx": "react",
    "lib": ["es6", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "strictNullChecks": true
  }
}